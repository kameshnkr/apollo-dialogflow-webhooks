{
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "linebreak-style": ["error", "unix"],
      "quotes": ["warn", "double"],
      "semi": ["warn", "always"]
    },
    "ignorePatterns": [
      "dist/*",
      "**/dist/*",
      "logs/*",
      "*.sh",
      "*.yml",
      "Dockerfile"
    ]
  }
  